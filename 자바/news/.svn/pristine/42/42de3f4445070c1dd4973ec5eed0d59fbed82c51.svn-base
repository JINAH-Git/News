/* 상위 카테고리들 */
.total_frm
{
	font-size:0; 
	width:800px; 
	border:1px solid #ddd;
	height:46px;
	padding-left:0;
}
.total_frm li
{
	display: inline-block;  
	height:46px; 
	width:113px;
	text-align:center; 
	border-right:1px solid #ddd;
}
.total_frm li a:before
{
	content:""; 
	position:absolute; 
	left:0; 
	top:0px; 
	width:100%; 
	height:3px; 
}
.total_frm li a.active:before
{
	background:#08377D;
}
.total_frm li a.active
{
	border-bottom:1px solid #fff;
}
.total_frm li a
{ 
	position:relative; 
	display:block; 
	background: #f8f8f8; 
	color: #000; 
	padding:0 20px; 
	line-height:46px; 
	text-decoration:none; 
	font-size:16px;
}
.total_frm li a:hover,
.total_frm li a.active
{
	background:#fff; color:#08377D; 
}

