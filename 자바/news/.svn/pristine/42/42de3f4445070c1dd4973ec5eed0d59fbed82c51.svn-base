/* 오늘의 뉴스 4개 */
.news_list_sort li
{
	position:relative;
	font-size:16px;
	width: 15%;
	height: 90px;
    padding: 0 16px;
    margin: 0 auto;
}

.news_list_sort li:after 
{
    content: '';
    width: 1px;
    height: 70px;
    background-color: #BCBCBC;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 0;
}
/* 태그 li 클래스 하나씩 */
.swiper-slide 
{
