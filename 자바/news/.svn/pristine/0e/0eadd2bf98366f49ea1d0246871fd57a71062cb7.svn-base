	height: 50px;
	position: relative;
	margin-left:20px;
    color: rgba(255,255,255,.6);
	top:10px;
	overflow: hidden;
	text-overflow: ellipsis;
}
.slide_s_r
{
	width: 280px;
	height: 50px;rgb(0, 0, 0), 0, 0)rder: 2px solid red;
	position: relative;
	top:355px; 
}
.btn_auto
{
	margin: 16px 10px;
	position: relative;
	width: 14px;
	height: 14px;
	left:30px;	
}
.news_slide_frm
{
	border: 3px solid black;
	float: right;
	position: relative;
	width:800px; 
	height: 450px;
	z-index: 2;
	bottom: 430px;
}
/* 이미지 슬라이드 멈추기 or 재생 */
/* 버튼 왼, 오, 슬라이드쇼 재생, 멈춤 전체 틀 */
.btn_group
{
	width: 100%;
	height: 400px;
	border:3px solid red;
    display: flex;
    justify-content: center;
}
.btn_prev
{
    width: 38px;
    height: 40px;
    background-image: url(/news/img/왼쪽.png);
    vertical-align: top;
    font-size: 0;
    left:330px;
    background-repeat: no-repeat;
    position: absolute;
    bottom:450px;
    background-color:transparent;
	
}
/* 슬라이드 쇼 시작, 멈춤 조작 */
.btn_auto
{
	position: absolute;
	vertical-align: top;
	
}
.btn_next
{
    width: 38px;
    height: 40px;
    background-image: url(/news/img/오른쪽.png);
    vertical-align: top;
    font-size: 0;
    background-repeat: no-repeat;
    position: absolute;
    bottom:450px;
    right:330px;
    background-color:transparent;
}
