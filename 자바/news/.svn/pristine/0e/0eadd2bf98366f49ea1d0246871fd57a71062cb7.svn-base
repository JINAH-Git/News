@charset "EUC-KR";

/* ======head 부분 시작 */ 
#head
{
	margin:0 auto; 
	width:100%; 
	height:120px;
	background-color:white;
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	z-index:10;
}
.header_inner
{
	position: relative;
    width: 100%;
    height: 135px;
    border: 1px solid blue;
    margin: 0 auto;
}
.mainicon
{
	position:absolute;
	left:130px;
	top:0;
	margin:0 auto;
	height:64px;
	padding-top:28px;
	box-sizing: content-box;
	font-size:40px;
	max-width: inherit;
	border: 1px solid red;
}

a
{
	text-decoration-line: none;
	color:black;
}

/* 상위 카테고리들 */
.wrap_section
{
	position:relative;
	width:850px;
	height:90px;
	left:740px;
	top:35px;
	font-family: 'Noto Sans KR', sans-serif;
	border: 1px solid black;
}

.section1{padding:20px 10px;font-family: 'Nanum Gothic', sans-serif;font-size:17pt;margin-left:25px;margin-right:25px;position:relative;float:left;}
.section2{padding:20px 10px;font-family: 'Nanum Gothic', sans-serif;font-size:17pt;margin-left:25px;margin-right:25px;position:relative;float:left;}
.section3{padding:20px 10px;font-family: 'Nanum Gothic', sans-serif;font-size:17pt;margin-left:25px;margin-right:25px;position:relative;float:left;}
.section4{padding:20px 10px;font-family: 'Nanum Gothic', sans-serif;font-size:17pt;margin-left:25px;margin-right:25px;position:relative;float:left;}
.section5{padding:20px 10px;font-family: 'Nanum Gothic', sans-serif;font-size:17pt;margin-left:25px;margin-right:25px;position:relative;float:left;}
.section6{padding:20px 10px;font-family: 'Nanum Gothic', sans-serif;font-size:17pt;margin-left:25px;margin-right:25px;position:relative;float:left;}


.subsection1{display: none;position:absolute;font-size:15pt;top:60px;margin-left:30px;text-align:center;}
.subsection2{display: none;position:absolute;font-size:15pt;top:60px;margin-left:70px;width:850px;text-align:center;}
.subsection3{display: none;position:absolute;font-size:15pt;top:60px;margin-left:50px;width:900px;}
.subsection4{display: none;position:absolute;font-size:15pt;top:60px;right:30px;width:1250px;text-align:center;}
.subsection5{display: none;position:absolute;font-size:15pt;top:60px;margin-left:30px;right:15px;text-align:center;}
.subsection6{display: none;position:absolute;font-size:15pt;top:60px;margin-left:100px;width:900px;text-align:center;}

.section1:hover ~ .subsection1{display: block;}
.section2:hover ~ .subsection2{display: block;}
.section3:hover ~ .subsection3{display: block;}
.section4:hover ~ .subsection4{display: block;}
.section5:hover ~ .subsection5{display: block;}
.section6:hover ~ .subsection6{display: block;} 


/* ======head 부분 끝 */


#top_search
{
	float:right;
	top:20px;	
	position: relative;
	right:70px;
	border: 1px solid red;
	
}
.keyword_area
{
	margin-bottom:50px;
	height:500px;
	width:1200px;
	position: relative;
    max-width: 1360px;
    padding: 20px 40px;
    margin: 0 auto;
    display: flex;
    align-items: center;
}
/* 검색 전체 틀 */
#site_search
{
   	background: white;
   	margin: 0 auto;
    width: 100%;
    display: none;
    z-index: 30;
    height: 130px;
    overflow: hidden;
    top:111px;
    
}
/* 통합검색과 검색어 틀*/
.center
{
    width: 600px;
    margin: 0 auto;
    display: block;
}
/* 통합검색 글씨 */
#site_search p 
{
	position:relative;
	right:116px;
	width: 300px;
	margin: 30px auto 10px;
	font-size:18px;
	color:black;
	font-family: 'Noto Sans KR', sans-serif;
}

.search_box
{
    position:relative;
    width: 600px;
    margin: 0 auto;
    background: none;
    border: none;
    padding: 0px;
    overflow: auto;
}
.placeholder_box
{
	position: relative;
	color:black;
	left:30px;
	width:400px;
	height:100px;
}
#site_search .search_box label 
{
    font-weight: 600;
    position: absolute;
    font-weight: 400;
    margin-top: 6px;
    opacity: 0.5;
    top: 0;
    left: 0;
}
/* 검색어를 입력해주세요 입력 창 */
#site_search .search_box input[type=text] 
{
    height: 45px;
    box-sizing: border-box;
    border: none;
    border-bottom: 1px solid black;
    background: transparent;
    width: 600px;
    margin: 0 auto;
}
/* 검색 버튼 */
.search_btn 
{
	position:absolute;
    background-size: 24px;
    background-color:transparent;
    width: 36px;
    height: 36px;
    left:534px;
    margin: 0 auto;
    top: 3px;
    transition: .3s cubic-bezier(.43,.08,.57,.83);
}
/* 컨텐츠 1 시작 */
.content1
{
	width:100%;
	height:700px;
	border: 3px solid black;
	margin-top: 140px;
}
/* 뉴스 정보들 시작(오늘의 이슈, 뉴스 리스트들)*/
.content_news
{
	border-bottom: 1px solid blue;
	height: 130px;
	background-color: #F6F6F6;
	margin: 0 auto;
	padding: 0;
}
/* 오늘의 이슈, 분석 대상 뉴스 */
.news_info
{
	border: 1px solid pink;
	float:left;
	margin: 0;
	width:300px;
	height: 125px;
	position: relative;
	left:110px;
}

/* 오늘의 이슈 */ 
.news_main_title
{
	font-size: 22px;
	float: left;
	position: relative;
	left:100px;
	color: #062158;
    font-weight: 400;
}
/* 분석 대상 뉴스 건 */
.news_total
{
	border: 1px solid black;
	width:285px;
	vertical-align:middle;
	margin: 8px 10px;
	text-align: left;
	position: relative;
	top:35px;
	right: 20px;
}

.content_news ul
{
	list-style:none;
}
/* 오늘의 이슈 기사 제목들 시작 */
.news_list
{
	border: 1px solid red;
	width:1330px;
	height: 130px;
	vertical-align: middle;
	position: absolute;
	left:430px;
	margin: 0 auto;
}
/* 오늘의 뉴스 4개 */
.news_list_sort li
{
	position:relative;
	font-size:16px;
	width: 21%;
	height: 90px;
    padding: 0 16px;
    margin: 0 auto;
}

.news_list_sort li:after 
{
    content: '';
    width: 1px;
    height: 59px;
    background-color: #BCBCBC;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 0;
}
.news_list:after
{
	content: '';
    width: 1px;
    height: 59px;
    background-color: #BCBCBC;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 0;
}
/* 태그 li 클래스 하나씩 */
.swiper-slide 
{
	border: 1px solid black;
	float:left;
    flex-shrink: 0;
    width: 1500px;
    height: 150px;
    position: relative;
    transition-property: transform;
    padding: 0 10px;
}
.news_title
{
	font-weight: 500;
	white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 16px;
    color:black;
}
.news_count
{
	white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 14px;
}
.news_photo_frm
{
	border: 1px solid gray;
	height: 420px;
}
.slide_frm
{
	width:1100px;
	height: 450px;
	margin: 0 auto;
}
/* div 안에 기사 제목 틀 */
.news_photo_title
{
	border: 3px solid green;
	width:320px;
	height: 280px;
	margin: 70px 0;
	float: left;
	position:relative;
	z-index: 4;
	background-color: #08377d
	
}
.title
{
	font-size: 25px;
	word-break: keep-all;
    font-weight: 500;
    overflow: hidden;
	border: 2px solid black;	
   	padding: 60px 20px 15px 20px;
   	text-align: left;
   	color: #fff;
   	margin: 0 auto;
   	height: 128px;
	text-overflow: ellipsis;
   	
}
/* 기사 날짜 */
.news_photo_wdate
{
	border-top: 1px solid #395789;
