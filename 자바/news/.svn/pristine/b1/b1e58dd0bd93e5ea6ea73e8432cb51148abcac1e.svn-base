@charset "EUC-KR";

/* head부분 */ 
.head
{
	border:1px solid red; 
	margin:0 auto; 
	margin-bottom:50px; 
	width:1400px; 
	height:200px;
}

.mainicon
{
	font-size:30pt;
	margin:35px;
	position:relative;
	top:50px;
}

a
{
	text-decoration-line: none;
}

.section
{
	font-size:20pt;
	margin:35px;
	position:relative;
	top:50px;
}

