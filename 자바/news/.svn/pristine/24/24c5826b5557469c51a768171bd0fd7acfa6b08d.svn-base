@charset "EUC-KR";

/* ======head 부분 시작 */ 
#head
{
	margin:0 auto; 
	width:100%; 
	height:135px;
	background-color:white;
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	z-index:10;
}
.header_inner
{
	position: relative;
    width: 100%;
    height: 135px;
    margin: 0 auto;
}
.mainicon
{
	position:absolute;
	left:300px;
	top:5px;
	margin:0 auto;
	height:64px;
	padding-top:28px;
	box-sizing: content-box;
	font-size:40px;
	max-width: inherit;
}

a
{
	text-decoration-line: none;
	color:black;
}

