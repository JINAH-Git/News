/* ======head 부분 끝 */


#top_search
{
	float:right;
	top:20px;	
	position: relative;
	right:0;
	
}
.keyword_area
{
	margin-bottom:50px;
	height:500px;
	width:1200px;
	position: relative;
    max-width: 1360px;
    padding: 20px 40px;
    margin: 0 auto;
    display: flex;
    align-items: center;
}
/* 검색 전체 틀 */
#site_search
{
   	background: white;
   	margin: 0 auto;
    width: 100%;
    display: none;
    z-index: 30;
    height: 130px;
    overflow: hidden;
    top:111px;
    
}
/* 통합검색과 검색어 틀*/
.center
{
    width: 600px;
    margin: 0 auto;
    display: block;
}
/* 통합검색 글씨 */
#site_search p 
{
	position:relative;
	right:116px;
	width: 300px;
	margin: 30px auto 10px;
	font-size:18px;
	color:black;
	font-family: 'Noto Sans KR', sans-serif;
}

.search_box
{
    position:relative;
    width: 600px;
    margin: 0 auto;
    background: none;
    border: none;
    padding: 0px;
    overflow: auto;
}
.placeholder_box
{
	position: relative;
	color:black;
	left:30px;
	width:500px;
	height:100px;
}
#site_search .search_box label 
{
    font-weight: 600;
    position: absolute;
    font-weight: 400;
    margin-top: 6px;
    opacity: 0.5;
    top: 0;
    left: 0;
}
/* 검색어를 입력해주세요 입력 창 */
#site_search .search_box input[type=text] 
{
    height: 45px;
    box-sizing: border-box;
    border: none;
    border-bottom: 1px solid black;
    background: transparent;
    width: 570px;
    margin: 0 auto;
}
/* 검색 버튼 */
.search_btn 
{
	position:absolute;
    background-size: 24px;
    background-color:transparent;
    width: 36px;
    height: 36px;
    left:534px;
    margin: 0 auto;
    top: 3px;
    transition: .3s cubic-bezier(.43,.08,.57,.83);
}
.blank_search
{
	font-family: 'Noto Sans KR';
	sans-serif;
	font-size:16px;
	outline:none;
}
/* 로딩중 화면  */
#loading 
{
   width: 100vw;
   height: 40vw;
   top: 0;
   left: 0;
   position: fixed;
   display: block;
   opacity: 0.7;
   background-color: #fff;
   z-index: 99;
   text-align: center;
}
#loading-image 
{
  position: absolute;
  z-index: 100;
  width:80vw; 
  height: 40vw; 
  margin-left:-5vw;
}